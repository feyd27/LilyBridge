</head>
<body>
    <!-- Temperature data display-->
    
    <main class="grid-contain)er">
        <h2>Temperature Messages</h2>
        <div id="temperatureMessagesContainer">
            <!-- Table structure for messages -->
            <table class="custom-table">
                <thead>
                    <tr>
                        <th>Board</th>
                        <th>MAC Address</th>
                        <th>Temperature</th>
                        <th>Timestamp</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Temperature messages will be dynamically inserted here -->
                </tbody>
            </table>
    
            <!-- Pagination controls -->
            <div id="paginationControls">
                <button class="button primary small" id="prevPage">Previous</button>
                <select id="pageSize">
                    <option value="25">25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
                <button class="button primary small" id="nextPage">Next</button>
            </div>
        </div>
    </main>
    
    
   
    <script src="/js/temperature.js"></script> <!-- Link to temperature page-specific JS file -->

</body>