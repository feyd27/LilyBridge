<div class="callout" id="alertContainer" style="display:none;"></div>

<div class="grid-x align-justify align-middle" style="margin-bottom:.5rem;">
  <div class="cell shrink">
    <label style="margin:0;">
      Page size:
      <select id="signumPageSize" class="small">
        <option value="25" selected>25</option>
        <option value="50">50</option>
        <option value="100">100</option>
      </select>
    </label>
  </div>
  <div class="cell shrink">
    <button id="signumPrevPage" class="button tiny" type="button">Prev</button>
    <button id="signumNextPage" class="button tiny" type="button">Next</button>
  </div>
  <div class="cell shrink">
    <span id="signumPaginationInfo" class="subheader">Page 1 of 1 â€” limit 25</span>
  </div>
</div>

<div class="table-scroll">
  <table class="hover custom-table">
    <thead>
      <tr>
        <th>Index</th>
        <th>Payload (B)</th>
        <th>Readings</th>
        <th>Confirmed</th>
        <th class="text-center">Explorer</th>
      </tr>
    </thead>
    <tbody id="signumTableBody"></tbody>
  </table>
</div>

