  <body>
<form id="settingsForm">
  <fieldset>
    <legend>MQTT Broker</legend>
    <label>Address
      <input type="url" name="mqttBroker.address" required>
    </label>
    <label>Username
      <input type="text" name="mqttBroker.username">
    </label>
    <label>Password
      <input type="password" name="mqttBroker.password">
    </label>
    <label>
      <input type="checkbox" name="mqttBroker.isPrivate"> Private broker
    </label>
  </fieldset>

  <fieldset>
    <legend>IOTA</legend>
    <label>Address
      <input type="text" name="iotaAddress">
    </label>
  </fieldset>

  <fieldset>
    <legend>Signum</legend>
    <label>Address
      <input type="text" name="signumAddress">
    </label>
  </fieldset>

  <button type="submit" class="button primary">Save Settings</button>
  <div id="settingsAlert" class="callout" style="display:none"></div>
</form>

<script type="module" src="/js/userSettings.js"></script>
</body>
