<!-- frontend/partials/layout.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="icon" type="image/png" href="images/favicon.png"> <!-- for .png files -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="css/foundation.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
</head>

<body>
    <div class="grid-container">
        <div class="grid-x grid-margin-x">
            <div class="cell medium-8 large-12">

                <!-- Collapsible Info Card Element -->
                <div class="custom-info-card">
                    <ul class="accordion" data-accordion data-allow-all-closed="true">
                        <!-- 
                          - The 'is-active' class makes this item open by default.
                          - Remove 'is-active' to have it start in a closed state.
                        -->
                        <li class="accordion-item is-active" data-accordion-item>
                            <!-- The clickable header with icon and title -->
                            <a href="#" class="accordion-title">
                                <i class="fas fa-info-circle"></i>
                                <span>Welcome to Lily Bridge!</span>
                            </a>

                            <!-- The collapsible content area -->
                            <div class="accordion-content" data-tab-content>
                                <p>Lily Bridge is a research application designed to explore a simple but powerful
                                    question:
                                    <b>Are blockchains ready for the Internet of Things (IoT)?</b>
                                </p>
                                <p>At the heart of our system is an ESP32 device, diligently measuring temperature data
                                    every minute.
                                    This data stream is the foundation of our experiment.</p>
                                <p><b>What Can You Do Here?</b></p>
                                <ul>
                                    <li>Observe Data: Watch the real-time feed of temperature readings as they arrive
                                        from our IoT device.</li>
                                    <li>Become a Researcher: You have the power to select batches of this sensor data
                                        and permanently
                                        anchor them on one of two different distributed ledgers: IOTA Shimmer or Signum.
                                    </li>
                                    <li>Analyze the Results: Once uploaded, you can dive into our global statistics
                                        page.
                                        There, we track key performance metrics like upload latency, data size, and
                                        transaction costs.</li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>

            </div>
        </div>
    </div>



    <!-- Temperature Table Section -->
    <section id="temperatureSection">
        <h1 class="title-align">Incoming Data Dashboard</h1>
        <h2 class="title-align">Temperature Over Time</h2>
        <canvas id="temperatureChart"></canvas>
    </section>

    <!-- Foundation JavaScript -->
    <script type="module" src="/js/temperatureChart.js"></script>
    <script type="module" src="../js/authCheck.js"></script>
    <script src="/js/foundation.min.js"></script>
    <script src="/js/statusMessage.js"></script>
    <script type="module" src="js/utils.js"></script>
    <script src="../js/foundationInit.js"></script>
    <script src="/js/jquery.min.js"></script>
    <script src="/js/foundation.min.js"></script>


    <script>
        // Initialize Foundation JS components
        $(document).foundation();
    </script>


</body>